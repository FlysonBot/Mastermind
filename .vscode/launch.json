{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Module (Just My Code)",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "module": "${command:extension.commandvariable.file.relativeFileDotsNoExtension}",
        },
        {
            "name": "Python Debugger: Module (All Code)",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "module": "${command:extension.commandvariable.file.relativeFileDotsNoExtension}",
            "justMyCode": false,
        },
        {
            "name": "Python Debugger: Just My Code",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
        },
        {
            "name": "Python Debugger: All Code",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "justMyCode": false
        },
        {
            "name": "Python Debugger: Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}"]
        }
    ]
}
